* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Microsoft JhengHei', sans-serif;
  background: #0d0d0d;
  color: #fff;
  overflow: hidden;
}

/* Main Container */
.settings-container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #1a1a1a;
}

/* Header */
.settings-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 24px;
  background: #252525;
  border-bottom: 1px solid #333;
}

.settings-header h1 {
  font-size: 1.5em;
  font-weight: 600;
}

.close-button {
  width: 32px;
  height: 32px;
  border: none;
  background: transparent;
  color: #999;
  font-size: 24px;
  cursor: pointer;
  border-radius: 4px;
  transition: all 0.2s;
}

.close-button:hover {
  background: #333;
  color: #fff;
}

/* Tab Navigation */
.tab-navigation {
  display: flex;
  background: #1e1e1e;
  border-bottom: 2px solid #333;
}

.tab-button {
  flex: 1;
  padding: 14px 16px;
  background: transparent;
  border: none;
  color: #999;
  font-size: 0.95em;
  cursor: pointer;
  transition: all 0.2s;
  border-bottom: 3px solid transparent;
  font-weight: 500;
}

.tab-button:hover {
  background: #252525;
  color: #fff;
}

.tab-button.active {
  color: #fff;
  border-bottom-color: #3498db;
  background: #252525;
}

/* Tab Content Container */
.tab-content-container {
  flex: 1;
  overflow-y: auto;
  padding: 24px 32px;
}

.tab-content {
  display: none;
  animation: fadeIn 0.3s;
}

.tab-content.active {
  display: block;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Settings Section */
.settings-section {
  margin-bottom: 36px;
}

.settings-section h2 {
  font-size: 1.15em;
  color: #fff;
  margin-bottom: 16px;
  padding-bottom: 8px;
  border-bottom: 1px solid #333;
  font-weight: 600;
}

/* Form Groups */
.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  margin-bottom: 8px;
  color: #ddd;
  font-weight: 500;
  font-size: 0.9em;
}

.form-group input[type="text"],
.form-group input[type="number"],
.form-group select {
  width: 100%;
  padding: 10px 12px;
  background: #252525;
  border: 1px solid #444;
  border-radius: 4px;
  color: #fff;
  font-size: 0.95em;
  transition: border-color 0.2s;
}

.form-group input[type="text"]:focus,
.form-group input[type="number"]:focus,
.form-group select:focus {
  outline: none;
  border-color: #3498db;
}

.form-group input[type="checkbox"] {
  width: auto;
  margin-right: 8px;
  cursor: pointer;
}

/* Checkbox Group */
.checkbox-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.checkbox-group label {
  display: flex;
  align-items: center;
  margin-bottom: 0;
  cursor: pointer;
}

.checkbox-group label span {
  user-select: none;
}

/* Input with Button */
.input-with-button {
  display: flex;
  gap: 8px;
}

.input-with-button input {
  flex: 1;
}

/* Slider Group */
.slider-group {
  display: flex;
  align-items: center;
  gap: 12px;
}

.slider-group input[type="range"] {
  flex: 1;
  height: 6px;
  background: #333;
  border-radius: 3px;
  outline: none;
  -webkit-appearance: none;
}

.slider-group input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 16px;
  height: 16px;
  background: #3498db;
  border-radius: 50%;
  cursor: pointer;
}

.slider-group input[type="range"]::-moz-range-thumb {
  width: 16px;
  height: 16px;
  background: #3498db;
  border-radius: 50%;
  cursor: pointer;
  border: none;
}

.slider-group span {
  min-width: 50px;
  text-align: right;
  color: #3498db;
  font-weight: 600;
  font-size: 0.9em;
}

/* Button Group */
.button-group {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
  margin-top: 12px;
}

/* Buttons */
.btn {
  padding: 10px 20px;
  border: none;
  border-radius: 4px;
  font-size: 0.9em;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-primary {
  background: #3498db;
  color: #fff;
}

.btn-primary:hover {
  background: #2980b9;
}

.btn-secondary {
  background: #444;
  color: #fff;
}

.btn-secondary:hover {
  background: #555;
}

.btn-sm {
  padding: 6px 12px;
  font-size: 0.85em;
}

/* Help Text */
.help-text {
  margin-top: 6px;
  font-size: 0.85em;
  color: #999;
  line-height: 1.4;
}

/* Readonly Field */
.readonly-field {
  padding: 10px 12px;
  background: #1a1a1a;
  border: 1px solid #444;
  border-radius: 4px;
  color: #999;
  font-size: 0.95em;
}

/* Footer */
.settings-footer {
  display: flex;
  justify-content: flex-end;
  gap: 12px;
  padding: 16px 24px;
  background: #252525;
  border-top: 1px solid #333;
}

/* About Page Specific */
.about-container {
  max-width: 600px;
  margin: 0 auto;
}

.app-logo {
  text-align: center;
  margin-bottom: 32px;
  padding: 24px 0;
}

.app-logo h1 {
  font-size: 2.2em;
  margin: 0;
  font-weight: 700;
  background: linear-gradient(135deg, #3498db 0%, #2ecc71 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.about-section {
  margin-bottom: 32px;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
  margin-bottom: 24px;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.info-label {
  font-size: 0.85em;
  color: #999;
  font-weight: 500;
}

.info-value {
  font-size: 1.05em;
  color: #fff;
  font-weight: 600;
}

.links-container {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.link-button {
  padding: 12px 16px;
  background: #252525;
  border: 1px solid #444;
  border-radius: 4px;
  color: #3498db;
  text-decoration: none;
  text-align: center;
  cursor: pointer;
  transition: all 0.2s;
  font-size: 0.9em;
  font-weight: 500;
}

.link-button:hover {
  background: #2c2c2c;
  border-color: #3498db;
}

/* Platform Specific Visibility */
body.platform-win32 .platform-darwin,
body.platform-win32 .platform-linux {
  display: none !important;
}

body.platform-darwin .platform-linux,
body.platform-darwin .platform-win32 {
  display: none !important;
}

body.platform-linux .platform-darwin,
body.platform-linux .platform-win32 {
  display: none !important;
}

/* Hide Wine tab on Windows */
body.platform-win32 .tab-button[data-tab="wine"] {
  display: none;
}

/* Scrollbar */
.tab-content-container::-webkit-scrollbar {
  width: 8px;
}

.tab-content-container::-webkit-scrollbar-track {
  background: #1a1a1a;
}

.tab-content-container::-webkit-scrollbar-thumb {
  background: #444;
  border-radius: 4px;
}

.tab-content-container::-webkit-scrollbar-thumb:hover {
  background: #555;
}
