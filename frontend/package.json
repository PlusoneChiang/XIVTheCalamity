{
  "name": "xivthecalamity",
  "version": "1.3.1",
  "description": "Final Fantasy XIV Cross-Platform Launcher",
  "main": "src/main/index.js",
  "scripts": {
    "postinstall": "patch-package",
    "start": "electron .",
    "build": "npm run build:cli && npm run build:backend && electron-builder",
    "build:cli": "node -e \"if(process.platform==='darwin'){require('child_process').execSync('cd ../XTCAudioRouter && ./build.sh release',{stdio:'inherit'})}else{console.log('Skipping XTCAudioRouter (macOS only)')}\"",
    "build:backend": "cd ../backend && dotnet publish src/XIVTheCalamity.Api/XIVTheCalamity.Api.csproj -c Release -r osx-arm64 --self-contained false -o ../Release/temp-backend",
    "build:dev": "npm run build:cli && npm run build:backend && electron-builder --dir",
    "build:prod": "npm run build:cli && npm run build:backend && electron-builder --dir",
    "pack": "npm run build:cli && npm run build:backend && electron-builder --dir",
    "dist": "npm run build:cli && npm run build:backend && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.XIVTheCalamity.launcher",
    "productName": "XIVTheCalamity",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "electronLanguages": [
      "en-US",
      "zh-TW"
    ],
    "directories": {
      "output": "../Release",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "resources/**/*",
      "package.json"
    ],
    "afterPack": "./electron-builder-afterpack.js",
    "afterSign": "./electron-builder-aftersign.js",
    "mac": {
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dir",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "build/XIVTC.icon",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "strictVerify": false,
      "notarize": false,
      "signIgnore": [
        "Contents/Resources/wine/.*"
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extraResources": [
        {
          "from": "../Release/temp-backend",
          "to": "backend",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "../wine",
          "to": "wine",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "../shared/resources",
          "to": "resources",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game",
      "extraResources": [
        {
          "from": "../Release/temp-backend-linux/XIVTheCalamity.Api",
          "to": "backend/XIVTheCalamity.Api"
        }
      ]
    }
  },
  "keywords": [
    "ff14",
    "ffxiv",
    "launcher",
    "electron"
  ],
  "author": "XIV The Calamity Contributors",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "patch-package": "^8.0.1"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "electron-log": "^5.4.3"
  }
}
